<div class="spinner modal-backdrop fade in hidden">
    <i class="fa fa-spinner fa-spin"></i>
</div>

<div class="window modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'common.close'|trans }}"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    <i class="fa-list-alt fa fa-lg fa-fw"></i>
                    <span class="title">Window</span>
                </h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="cancel btn btn-default btn-lg">
                    {{ 'common.close'|trans }}
                </button>                        
                <button type="button" class="send btn btn-default btn-lg">
                    {{ 'common.send'|trans }}
                </button>                
            </div>
        </div>
    </div>
</div>

<div class="dialog template modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'common.close'|trans }}"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    <i class="fa fa-lg fa-fw"></i>
                    <span class="title"></span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-2 icon">
                        <i class="fa fa-lg fa-fw"></i>
                    </div>
                    <div class="col-sm-8 message"></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <form class="form-horizontal">
                            <input type="text" name="text" class="form-control hidden" required="required"/>
                            <button class="submit hidden" type="submit"/>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="yes btn btn-default btn-lg col-lg-3 pull-right hidden"
                        >{{ 'common.yes'|trans }}</button>
                <button type="button"
                        class="save btn btn-default btn-lg col-lg-3 pull-right hidden"
                        >{{ 'common.save'|trans }}</button>
                <button type="button"
                        data-dismiss="modal"
                        class="cancel btn btn-default btn-lg col-lg-3 pull-right hidden"
                        >{{ 'common.cancel'|trans }}</button>
                <button type="button"
                        class="no btn btn-default btn-lg col-lg-3 pull-right hidden"
                        >{{ 'common.no'|trans }}</button>
                <button type="button" class="ok btn btn-default btn-lg col-lg-3 pull-right"  data-dismiss="modal"
                        >{{ 'common.ok'|trans }}</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        Dialog.setTypes({
            error: '{{'dialog.error'|trans}}',
            warning: '{{'dialog.warning'|trans}}',
            info: '{{'dialog.info'|trans}}',
            input: '{{'dialog.input'|trans}}',
            question: '{{'dialog.question'|trans}}',
            confirmation: '{{'dialog.confirmation'|trans}}'
        });
    });
</script>