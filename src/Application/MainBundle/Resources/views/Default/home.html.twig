{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        function spinnerTest() {
            Spinner.show();
            setTimeout(function() {
              Spinner.hide();
            }, 3000);
        }
    </script>
{% endblock %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            <h1 class="page-header">
                <i class="fa fa-hashtag"></i>
                {{ app_name|trans }}
            </h1>
            <p>{{ app_description|trans|nl2br }}</p>
            <a href="javascript:spinnerTest()" class="btn btn-lg btn-success">
                <i class="fa fa-lg fa-fw fa-cog"></i>
            </a>
        </div>
    </div>

{% endblock %}