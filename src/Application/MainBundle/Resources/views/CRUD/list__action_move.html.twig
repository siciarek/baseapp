{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
    {% set pix_position =  sortableObjectPosition(object) %}

    {% if pix_position > 0 %}
        <a class="btn btn-sm btn-default"
           href="{{ admin.generateObjectUrl('move', object, {'position': 'up'}) }}"
           title="{{ 'move_up'|trans }}">
            {{- 'icon_move_up'|trans|raw -}}
        </a>
    {% else %}
        <a class="btn btn-sm btn-default disabled"
           href="#"
           title="{{ 'move_up'|trans }}">
            {{- 'icon_move_up'|trans|raw -}}
        </a>
    {% endif %}

    {% if pix_position < admin.lastPosition %}
        <a class="btn btn-sm btn-default"
           href="{{ admin.generateObjectUrl('move', object, {'position': 'down'}) }}"
           title="{{ 'move_down'|trans }}">
            {{- 'icon_move_down'|trans|raw -}}
        </a>
    {% else %}
        <a class="btn btn-sm btn-default disabled"
           href="#"
           title="{{ 'move_down'|trans }}">
            {{- 'icon_move_down'|trans|raw -}}
        </a>
    {% endif %}



    {% if pix_position > 0 %}
        <a class="btn btn-sm btn-default"
           href="{{ admin.generateObjectUrl('move', object, {'position': 'top'}) }}"
           title="{{ 'move_to_top'|trans }}">
            {{- 'icon_move_to_top'|trans|raw -}}
        </a>
    {% else %}
        <a class="btn btn-sm btn-default disabled"
           href="#"
           title="{{ 'move_to_top'|trans }}">
            {{- 'icon_move_to_top'|trans|raw -}}
        </a>
    {% endif %}

    {% if pix_position < admin.lastPosition %}
        <a class="btn btn-sm btn-default"
           href="{{ admin.generateObjectUrl('move', object, {'position': 'bottom'}) }}"
           title="{{ 'move_to_bottom'|trans }}">
            {{- 'icon_move_to_bottom'|trans|raw -}}
        </a>
    {% else %}
        <a class="btn btn-sm btn-default disabled"
           href="#"
           title="{{ 'move_to_bottom'|trans }}">
            {{- 'icon_move_to_bottom'|trans|raw -}}
        </a>
    {% endif %}


{% endif %}
