<div class="panel panel-success">
    <div class="panel-heading">
        <h2 class="panel-title">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h2>
    </div>
    <div class="panel-body">

        {{ form_start(form, { action:  path('fos_user_registration_register'), method: 'post', attr: { class: 'form-horizontal' }} ) }}

        <div class="form-group">
            <div class="col-sm-8">{{ form_widget(form.username, { attr: { class: 'form-control' }} ) }}</div>
            {{ form_label(form.username, null, { class: 'col-sm-4 control-label' }) }}
            {#{{ form_errors(form.username) }}#}
        </div>

        <div class="form-actions">
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}"
                   class="btn btn-success pull-right"/>
        </div>

        {{ form_end(form) }}
    </div>
</div>