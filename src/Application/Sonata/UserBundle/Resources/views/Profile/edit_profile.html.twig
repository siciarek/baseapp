{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    {{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}
{% endblock %}

{% block sonata_profile_content %}

    {{ form_errors(form) }}

    <div class="row">
        <div class="col-lg-7">
            <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal">
                {{ form_start(form, { attr: { class: 'form-horizontal' }}) }}

                {{ macros.formFields(form, [
                    'gender',
                    'firstname',
                    'lastname',
                    'dateOfBirth',
                    'website',
                    'biography',
                    'locale',
                    'timezone',
                    'phone',
                ]) }}


                <div class="form-actions">
                    <button type="submit" name="submit"  class="btn btn-default btn-lg pull-right">{{ 'common.save'|trans }}</button>
                </div>

                {{ form_end(form) }}

                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
        </div>
    </div>

{% endblock %}