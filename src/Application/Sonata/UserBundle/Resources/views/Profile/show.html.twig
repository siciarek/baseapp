{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('form.form-horizontal').on('submit', function () {
                Spinner.show();
            });
        });
    </script>
{% endblock %}

{% block sonata_profile_content %}

    {% include 'SonataUserBundle:Profile:tabs.html.twig' %}

    <div class="row">
        <div class="col-lg-7">
            <div id="profile-tab-content" class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="profile-tab-content">
                    {{ render(url('user.parameter.settings')) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}